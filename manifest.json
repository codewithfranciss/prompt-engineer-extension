{
  "manifest_version": 3,
  "name": "Prompt Perfecter (Deepseek R1)",
  "version": "1.0",
  "description": "Refine and optimize your prompts using Deepseek R1 via OpenRouter.",
  "permissions": [
    "activeTab",
    "contextMenus",
    "storage",
    "scripting"
  ],
  "host_permissions": [
    "https://openrouter.ai/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "Prompt Perfecter"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ]
}